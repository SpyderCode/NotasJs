<div class="row">
    <div class="col-lg-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Iniciar Sesion
            </div>
            <img src="/img/user.png" class="rounded-circle mx-auto b-block m-4 logo" alt="logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-control m-2">
                        <input type="email" name="email" class="form-control" placeholder="Introduzca su email" value="{{email}}">
                    </div>
                    <div class="form-control m-2">
                        <input type="password" name="password" class="form-control" placeholder="Introduzca su password" value="{{password}}">
                    </div>
                    <div class="form-group d-grid gap-2 m-2">
                        <button type="submit" class="btn btn-primary btn-block"> Ingresar </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>