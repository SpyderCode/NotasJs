<div class="row">
    <div class="col-lg-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registro de Usuarios
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-control m-2">
                        <input type="text" name="nombre" class="form-control" placeholder="Introduzca su nombre" autofocus value="{{nombre}}">
                    </div>
                    <div class="form-control m-2">
                        <input type="email" name="email" class="form-control" placeholder="Introduzca su email" value="{{email}}">
                    </div>
                    <div class="form-control m-2">
                        <input type="password" name="password" class="form-control" placeholder="Introduzca su password" value="{{password}}">
                    </div>
                    <div class="form-control m-2">
                        <input type="password" name="confirmarpassword" class="form-control" placeholder="Confirme su password" value="{{confirmarpassword}}">
                    </div>
                    <div class="form-group d-grid gap-2 m-2">
                        <button type="submit" class="btn btn-primary btn-block"> Registrar </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>