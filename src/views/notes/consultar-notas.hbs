<div class="row">
    {{#each notas}}
        <div class="col-lg-4">
            <div class="card text-dark bg-light border-info m-3">
                <div class="card-header">
                    <h4 class="card-title text-dark d-flex
                                justify-content-between align-items-center">
                        {{titulo}}
                        <a href="/notes/edit:{{_id}}">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a href="/notes/delete:{{_id}}">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </h4>
                </div>
                <div class="card-body">
                    <p>{{descripcion}}</p>
                </div>
            </div>
        </div>
    {{else}}
        <div class="col-md-6">
            <div class="card text-dark bg-light border-info m-3">
                <div class="card-header">
                    <h1>Hola {{usuario.nombre}}</h1>
                    <h4 class="card-title">
                        No existen notas en la base de datos
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="/notes/add" class="btn btn-outline-primary" type="Button">
                            Agregar una nota
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>